# Pylint Configuration for Streamlit Pages
# Focused on error detection, not style

[MASTER]
# Use multiple processes for speed
jobs=4

# Pickle collected data for comparisons
persistent=no

# List of plugins
load-plugins=

[MESSAGES CONTROL]
# Disable ALL checks first, then enable specific ones
disable=all

# Enable ONLY error detection (not style/convention)
enable=
    # Errors (E)
    undefined-variable,
    used-before-assignment,
    undefined-loop-variable,
    undefined-all-variable,
    invalid-all-object,
    no-member,
    not-callable,
    assignment-from-no-return,
    assignment-from-none,
    not-context-manager,
    repeated-keyword,
    duplicate-key,
    too-many-function-args,
    unexpected-keyword-arg,
    no-value-for-parameter,
    invalid-sequence-index,
    invalid-slice-index,
    import-error,
    relative-beyond-top-level,
    # Warnings (W) - critical ones only
    unused-variable,
    unused-import,
    pointless-statement,
    expression-not-assigned,
    unreachable,
    duplicate-except,
    # Fatal (F)
    astroid-error,
    parse-error

[REPORTS]
# Don't show reports
reports=no

# Don't show score
score=no

# Message template
msg-template={path}:{line}: [{msg_id}({symbol})] {msg}

[BASIC]
# No naming checks
include-naming-hint=no

[FORMAT]
# No formatting checks
max-line-length=999

[DESIGN]
# No design checks
max-args=999
max-locals=999
max-returns=999
max-branches=999
max-statements=999
max-parents=999
max-attributes=999
min-public-methods=0
max-public-methods=999

[CLASSES]
# No class checks
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=mcs

[IMPORTS]
# No import order checking

[EXCEPTIONS]
# No exception checks
